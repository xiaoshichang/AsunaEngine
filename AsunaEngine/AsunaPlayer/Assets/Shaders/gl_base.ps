////////////////////////////////////////////////////////////////////////////////
// Filename: color.ps
////////////////////////////////////////////////////////////////////////////////
#version 420


/////////////////////
// INPUT VARIABLES //
/////////////////////
in vec3 nw;
in vec3 texcoord0;

//////////////////////
// OUTPUT VARIABLES //
//////////////////////
out vec4 outputColor;

layout (std140, binding = 0) uniform ConstantBufferPerFrame
{
    mat4 viewMatrix;
    mat4 projectionMatrix;
    mat4 vp;
};

layout (std140, binding = 1) uniform ConstantBufferPerObject
{
    mat4 worldMatrix;
};

layout (std140, binding = 2) uniform ConstantBufferPerMaterial
{
    vec4 mainColor;
    mat4 ModelMatrix;
};

uniform sampler2D BaseTexture;

////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
void main(void)
{
	outputColor = texture(BaseTexture, texcoord0.xy);
}

