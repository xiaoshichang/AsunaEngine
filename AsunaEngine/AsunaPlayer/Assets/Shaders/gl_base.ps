#version 400


/////////////////////
// INPUT VARIABLES //
/////////////////////
in vec3 nw;
in vec3 texcoord0;

//////////////////////
// OUTPUT VARIABLES //
//////////////////////
out vec4 outputColor;

uniform vec4 BaseColor;
uniform sampler2D BaseTexture;

////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
void main(void)
{
	outputColor = texture(BaseTexture, texcoord0.xy);
}

