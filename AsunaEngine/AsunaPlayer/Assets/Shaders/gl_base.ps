////////////////////////////////////////////////////////////////////////////////
// Filename: color.ps
////////////////////////////////////////////////////////////////////////////////
#version 420


/////////////////////
// INPUT VARIABLES //
/////////////////////
in vec3 nw;
in vec3 texcoord0;

//////////////////////
// OUTPUT VARIABLES //
//////////////////////
out vec4 outputColor;

///////////////////////
// UNIFORM VARIABLES //
///////////////////////

struct ConstantBufferDirectionLight
{
    vec4 direction;
    vec4 color;
    vec4 intensity;
};

struct ConstantBufferSpotLight
{
    vec4 Position;
    vec4 color;
    vec4 intensity;
};

layout (std140, binding = 0) uniform ConstantBufferPerFrame
{
    mat4 viewMatrix;
    mat4 projectionMatrix;
    mat4 vp;
    ConstantBufferDirectionLight directionLight;
    ConstantBufferSpotLight spotLights[4];
};

layout (std140, binding = 1) uniform ConstantBufferPerObject
{
    mat4 worldMatrix;
};

layout (std140, binding = 2) uniform ConstantBufferPerMaterial
{
    vec4 mainColor;
    mat4 ModelMatrix;
};

uniform sampler2D BaseTexture;

////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
void main(void)
{
	vec4 baseColor = texture(BaseTexture, texcoord0.xy);
	float diffLight = max(dot(nw.xyz, -directionLight.direction.xyz), 0.0);
    float envLight = 0.4;
    float lighting = (diffLight + envLight);
    outputColor.xyz = baseColor.xyz * lighting;
    outputColor.w = 1;
}

