
Texture2D tBaseMap;
SamplerState tBaseMapSamplerState;

struct v2p {
	float4 position : SV_POSITION;
	float4 nw : NORMAL;
	float4 texcoord : TEXCOORD;
};

cbuffer ConstantBufferPerFrame
{
    matrix viewMatrix;
    matrix projectionMatrix;
    matrix vp;
};

cbuffer ConstantBufferPerObject
{
    matrix worldMatrix;
}

cbuffer ConstantBufferPerMaterial
{
    float4 mainColor;
}

float4 main(v2p input) : SV_TARGET
{
    float4 color = tBaseMap.Sample(tBaseMapSamplerState, input.texcoord.xy);
    return color;
}

