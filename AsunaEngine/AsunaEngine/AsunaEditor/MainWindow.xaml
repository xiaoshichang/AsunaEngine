<Window x:Class="AsunaEditor.AsunaEditorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsunaEditor"
        xmlns:me="clr-namespace:AsunaEditor.Editors.MainEditor"
        mc:Ignorable="d"
        Title="AsunaEditor" 
        Width="1920"  Height="1080" MinWidth="960" MinHeight="540"
        >
    <DockPanel>
        <me:HierarcyPanel       
            DockPanel.Dock="Left"      
            MinWidth="300"     
            Background="LightPink"
            >
        </me:HierarcyPanel>

        <me:InspectorPanel      
            DockPanel.Dock="Right"
            MinWidth="300"
            Background="LightGray"
            >
        </me:InspectorPanel>

        <me:AssetBrowserPanel
            DockPanel.Dock="Bottom"
            MinHeight="300"
            Background="LightCyan">
        </me:AssetBrowserPanel>

        <me:RenderPanel         
            Background="LightSkyBlue">
        </me:RenderPanel>

    </DockPanel>
</Window>
